<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/glass_card_margin"
                android:layout_marginRight="@dimen/glass_card_margin"
                android:keepScreenOn="true">

    <TextView
        android:id="@+id/tv_phone_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/phone_confirm"
        />

    <TextView
        android:id="@+id/tv_your_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_phone_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/phone_margin"
        android:text="@string/tv_scrollcard_activity_phone_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/tip_tap_to_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/tip_margin_bottom"
        android:text="@string/tv_phone_confirm_label"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

</RelativeLayout>